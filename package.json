{
  "name": "@iwharris/timer",
  "version": "0.0.2",
  "description": "no-nonsense nodejs timer",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run -s test && npm run -s build",
    "prettier": "prettier -c \"{src,test}/**/*.[jt]s\"",
    "prettier:fix": "npm run -s prettier -- --write",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/iwharris/timer.git"
  },
  "keywords": [
    "timer",
    "nodejs",
    "typescript"
  ],
  "author": "Ian Harris",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/iwharris/timer/issues"
  },
  "homepage": "https://github.com/iwharris/timer#readme",
  "jest": {
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "/test/.*\\.(test|spec)?\\.(ts)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "endOfLine": "lf",
    "printWidth": 100,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "es5",
    "useTabs": false
  },
  "eslint": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "env": {
      "node": true,
      "commonjs": true,
      "es6": true
    },
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2019,
      "sourceType": "module"
    },
    "rules": {
      "prettier/prettier": "warn",
      "no-unused-vars": "error",
      "@typescript-eslint/explicit-function-return-type": 0,
      "@typescript-eslint/no-explicit-any": 0,
      "@typescript-eslint/camelcase": 0,
      "@typescript-eslint/no-use-before-define": 0,
      "@typescript-eslint/no-inferrable-types": 0
    }
  },
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "@types/node": "^12.12.14",
    "@typescript-eslint/eslint-plugin": "^2.9.0",
    "@typescript-eslint/parser": "^2.9.0",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-prettier": "^3.1.1",
    "jest": "^24.9.0",
    "prettier": "^1.19.1",
    "ts-jest": "^24.2.0",
    "typescript": "^3.7.2"
  },
  "dependencies": {}
}
